{
    "name": "brickstone",
    "version": "1.0.2",
    "type": "module",
    "repository": {
        "url": "https://github.com/vendera-trading-company/brickstone"
    },
    "author": {
        "name": "Vendera Trading Company",
        "url": "https://vendera-trading.company",
        "email": "support@vendera-trading.company"
    },
    "files": [
        "dist",
        "lib"
    ],
    "main": "./dist/brickstone.umd.cjs",
    "module": "./dist/brickstone.js",
    "exports": {
        ".": {
            "import": "./dist/brickstone.js",
            "require": "./dist/brickstone.umd.cjs"
        },
        "./dist/installer": {
            "import": "./dist/installer.js",
            "require": "./dist/installer.js"
        },
        "./dist/style.css": {
            "import": "./dist/style.css",
            "require": "./dist/style.css"
        },
        "./*": "./dist/*"
    },
    "types": "./dist/index.d.ts",
    "scripts": {
        "liveview": "npm run build && cd ./example && npm run dev",
        "dev": "vite",
        "build": "vite build && vue-tsc --emitDeclarationOnly && cp ./lib/installer.js ./dist/installer.js",
        "types": "vue-tsc ",
        "preview": "vite preview",
        "deploy": "vite build && vue-tsc --emitDeclarationOnly && npm publish"
    },
    "dependencies": {
        "vue": "^3.3.x",
        "tailwindcss": "^3"
    },
    "devDependencies": {
        "@types/node": "^20.11.14",
        "@vitejs/plugin-vue": "^4.2.3",
        "autoprefixer": "^10.4.17",
        "postcss": "^8.4.33",
        "typescript": "^5.0.2",
        "vite": "^4.3.9",
        "vue-tsc": "^1.4.2"
    }
}